<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:color="@android:color/holo_red_dark" android:width="2dp"/>
            <gradient android:startColor="#66666666" android:endColor="#66666666"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:color="@android:color/white" android:width="2dp"/>
            <gradient android:startColor="#88888888" android:endColor="#88888888"/>
        </shape>
    </item>
    <item>
        <shape>
            <!--<solid android:color="@android:color/holo_orange_dark" />-->
            <corners android:radius="5dp"/>
            <stroke android:color="@android:color/darker_gray" android:width="1dp"/>
        </shape>
    </item>
</selector>