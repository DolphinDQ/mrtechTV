<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="mrtech.tv.FullscreenActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cell_view_container" />

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <Button
            android:id="@+id/nine_view_btn"
            style="@style/ToolButton"
            android:nextFocusUp="@+id/set_router_btn"
            android:text="@string/nine_view" />
        <Button
            android:id="@+id/four_view_btn"
            style="@style/ToolButton"
            android:text="@string/four_view" />
        <Button
            android:id="@+id/single_view_btn"
            style="@style/ToolButton"
            android:text="@string/single_view" />

        <Button
            android:text="刷新"
            android:id="@+id/reset_btn"
            style="@style/ToolButton"/>

        <Button
            android:id="@+id/set_router_btn"
            style="@style/ToolButton"
            android:nextFocusDown="@+id/nine_view_btn"
            android:text="@string/set_router" />
    </LinearLayout>
</RelativeLayout>
